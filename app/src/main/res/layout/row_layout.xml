<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_margin="16dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cheeta"
            android:layout_marginRight="8dp"
            android:id="@+id/card_image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/card_image"
            android:layout_marginTop="8dp"
            android:text="Character Name"
            android:textSize="28dp"
            android:textColor="#000000"
            android:id="@+id/card_title"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/card_number"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/card_image"
            android:layout_below="@+id/card_title"
            android:layout_marginTop="4dp"
            android:text="Character Number"
            android:textSize="16dp"
            android:layout_above="@+id/card_divider"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/card_image"
            android:id="@+id/card_divider"
            android:layout_marginBottom="10dp"
            android:background="@color/colorAccent"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            style="?attr/borderlessButtonStyle"
            android:layout_below="@+id/card_divider"
            android:layout_toLeftOf="@+id/card_delete"
            android:text="Share"
            android:layout_margin="8dp"
            android:id="@+id/card_share" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            style="?attr/borderlessButtonStyle"
            android:layout_below="@+id/card_divider"
            android:text="delete"
            android:layout_margin="8dp"
            android:id="@+id/card_delete"
            android:layout_alignParentEnd="true"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            style="?attr/borderlessButtonStyle"
            android:layout_below="@+id/card_divider"
            android:text="Full Page"
            android:layout_margin="8dp"
            android:id="@+id/card_full"/>




    </RelativeLayout>

</android.support.v7.widget.CardView>